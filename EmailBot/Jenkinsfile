pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "emailbot:latest"
        CREDENTIALS_PATH = "/var/jenkins_home/secrets/emailbot" // example path on Jenkins server
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/EmailBot.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    docker.image(DOCKER_IMAGE).inside {
                        sh "pytest tests/"
                    }
                }
            }
        }

        stage('Run EmailBot Container') {
            steps {
                script {
                    docker.image(DOCKER_IMAGE).inside("-v ${CREDENTIALS_PATH}/credentials.json:/app/credentials.json -v ${CREDENTIALS_PATH}/token.json:/app/token.json") {
                        sh "uvicorn app.main:app --host 0.0.0.0 --port 8000"
                    }
                }
            }
        }

        stage('Push Docker Image (Optional)') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials-id') {
                        docker.image(DOCKER_IMAGE).push('latest')
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploy stage - can add Docker Compose / Kubernetes commands here"
            }
        }
    }

    post {
        always {
            echo "Pipeline finished"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
